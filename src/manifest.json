{
  "name": "__MSG_extName__",
  "version": "2.1.3",
  "default_locale": "zh_CN",
  "description": "__MSG_extDescription__",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "tabs",
    "cookies",
    "notifications",
    "alarms",
    "storage"
  ],
  "host_permissions": ["*://thwiki.cc/*"],
  "homepage_url": "https://github.com/whuihuan/THBWiki-Ext",
  "background": {
    "background.service_worker": "pages/background.html"
  },
  "action": {
    "default_title": "__MSG_extName__",
    "default_icon": "public/images/logo-32-bw.png",
    "default_popup": "pages/popup.html"
  },
  "icons": {
    "128": "public/images/logo-128.png"
  },
  "omnibox": {
    "keyword": "thb"
  },
  "content_scripts": [
    {
      "matches": ["*://thwiki.cc/*"],
      "css": [
        "public/libs/element-ui/element-ui.css",
        "public/css/style.css",
        "public/libs/APlayer/APlayer.min.css"
      ],
      "js": [
        "public/libs/jquery-3.3.1.min.js",
        "public/libs/vue.min.js",
        "public/libs/element-ui/element-ui.js",
        "public/libs/APlayer/APlayer.min.js",
        "public/js/browser/api.js",
        "public/js/common.js",
        "public/js/api.js",
        "public/js/thb.js",
        "public/js/browser/content_scripts.js",
        "public/js/ext.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["/public/libs/element-ui/fonts/*", "/manifest.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "style-src 'self' 'unsafe-inline';script-src 'self'; object-src 'self' ;img-src https:; font-src 'self' 'unsafe-inline';"
  }
}
