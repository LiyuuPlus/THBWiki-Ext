{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "https://github.com/whuihuan/THBWiki-Ext",
  "description": "__MSG_extDescription__",
  "default_locale": "zh_CN",
  "permissions": [
    "contextMenus",
    "tabs",
    "cookies",
    "*://thwiki.cc/*",
    "notifications",
    "alarms",
    "storage"
  ],
  "icons": {
    "128": "icons/logo-128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": "icons/logo-32-bw.png"
  },
  "omnibox": {
    "keyword": "thb"
  },
  "web_accessible_resources": [
    "fonts/*",
    "manifest.json"
  ],
  "content_security_policy": "style-src 'self' 'unsafe-inline';script-src 'self' 'unsafe-eval'; object-src 'self' ;img-src https:; font-src 'self' 'unsafe-inline';"
}
